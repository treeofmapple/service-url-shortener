{
  "info": {
    "_postman_id": "a1b2c3d4-e5f6-4a7b-8c9d-0e1f2a3b4c5d",
    "name": "URL Shortener API",
    "description": "A collection of API requests for the URL Shortener service, covering both main user-facing and developer endpoints.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_exporter_id": "12345678"
  },
  "item": [
    {
      "name": "Main Controller",
      "item": [
        {
          "name": "Shorten URL",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"url\": \"https://www.google.com/search?q=postman+collection+example\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}",
              "host": [
                "{{baseUrl}}"
              ]
            }
          }
        },
        {
          "name": "Redirect URL",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/{{shortUrl}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "{{shortUrl}}"
              ]
            }
          }
        },
        {
          "name": "Extend URL Expiration",
          "request": {
            "method": "PATCH",
            "url": {
              "raw": "{{baseUrl}}/extend/{{shortUrl}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "extend",
                "{{shortUrl}}"
              ]
            }
          }
        },
        {
          "name": "Find Basic URL Info",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/info?url={{shortUrl}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "info"
              ],
              "query": [
                {
                  "key": "url",
                  "value": "{{shortUrl}}"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Developer Controller",
      "item": [
        {
          "name": "Find Full URL Info",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/dev/full?url={{shortUrl}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "dev",
                "full"
              ],
              "query": [
                {
                  "key": "url",
                  "value": "{{shortUrl}}"
                }
              ]
            }
          }
        },
        {
          "name": "Delete URL",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{baseUrl}}/dev/remove/{{shortUrl}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "dev",
                "remove",
                "{{shortUrl}}"
              ]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080"
    },
    {
      "key": "shortUrl",
      "value": "your-short-code"
    }
  ]
}